@model IEnumerable<YokeTechOnline.Models.Domain.Customer>

@{
}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Customer/Add">Add More</a>
        </div>
    </div>
    <div class="row">
        <div class="col col-md-6">
            <h3>Customers</h3>
            
        <table class="table table-striped table-bordered table-dark pt-3">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                              <td>@item.FirstName</td>  
                              <td>@item.LastName</td>   
                              <td>@item.Address</td>  
                              <td>@item.Phone</td> 
                              <td>
                                  <a class="btn btn-success"href="/Customer/Update?id=@item.Id">Edit</a>
                                  <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Customer/Delete?id=@item.Id">Delete</a>
                              </td>
                        </tr>
                    }
                </tbody>
        </table>
        </div>
    </div>
</div>
