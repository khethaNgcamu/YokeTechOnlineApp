@model YokeTechOnline.Models.Domain.Customer

@{
}

<div class="container pt-3">
    <div class="row">
        <div class="col col-md-6">
            <h3>Update Customer</h3>
        <form asp-action="Update" method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="FirstName">Name</label>
                <input type="text" class="form-control" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="LastName">SurName</label>
                <input type="text" class="form-control" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Address">Address</label>
                <input type="text" class="form-control" asp-for="Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control" asp-for="Phone" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
                @if (TempData["msg"] != null)
                {
                        <div class="form-group">
                        @TempData["msg"]
                        </div>   
                }

                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Save</button>
                    <a href="/Customer/GetAll" class="btn btn-primary">List</a>
                </div>
        </form>
        </div>
    </div>
</div>
