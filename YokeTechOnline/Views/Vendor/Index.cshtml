@model IEnumerable<YokeTechOnline.Models.Domain.Vendor>

<div class="container pt-3">
    <div class="row">
        <div class="col-md-7">
            <a class="btn btn-dark" asp-action="Add">Add More</a>
            </div>
            <div class="row">
              <div class="col-md-7">
                <h3>Vendors</h3>
                <table class="table table-striped table-bordered table-dark">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Company Name</th>
                            <th>Contact Person</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CompanyName</td>
                                <td>@item.ContactPerson</td>
                                <td>@item.Address</td>
                                <td>@item.phone</td>
                                <td>
                                    <a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-danger" onclick="return window.confirm(" Are you sure?") asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
              </div>
      
        </div>
    </div>
</div>