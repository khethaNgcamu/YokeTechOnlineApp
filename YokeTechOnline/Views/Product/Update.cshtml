@model YokeTechOnline.Models.Domain.Product

<div class="container" pt-3>
    <div class="row">
        <div class="col-md-6">
            <h3>Update Product</h3>
            <form asp-action="Update" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <label asp-for="Name"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="form-control"></label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="form-control"></label>
                    <input type="number" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount" class="form-control"></label>
                    <input type="number" asp-for="Discount" class="form-control" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InDate" class="form-control"></label>
                    <input type="datetime-local" asp-for="InDate" class="form-control" />
                    <span asp-validation-for="InDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QOH" class="form-control"></label>
                    <input type="number" asp-for="QOH" class="form-control" />
                    <span asp-validation-for="QOH" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VendorId" class="form-control"></label>
                    <select asp-for="VendorId" class="form-control" asp-items="ViewBag.VendorId">@ViewBag.Id</select>
                    <span asp-validation-for="VendorId" class="text-danger"></span>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn btn-dark">Save</button>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>


            </form>
        </div>
    </div>
</div>
