
@model YokeTechOnline.Models.Domain.Invoice


<div class="container pt-3" >
    <div class="col-md-6">
        <h3>Update Invoice</h3>
        <form action="Update" method="post">
            <div class="form-group">
                 <input type="hidden" asp-for="Id" />
                <label asp-for="CustomerId"></label>
                <input type="number" asp-for="CustomerId" class=" form-control"/>
                <span asp-asp-validation-for="CustomerId" class="text-dander"></span>
           </div>
            @if (TempData["msg"] != null)
            {
                    <div class="form-group">
                    @TempData["msg"]
                    </div>
            }

            <div class="form-group pt-3">
                <button type="submit" class="btn btn-dark">Save</button>
                <a asp-controller="Invoice" asp-action="GetAll" class="btn btn-primary">List</a>
            </div>

        </form>
    </div>

</div>